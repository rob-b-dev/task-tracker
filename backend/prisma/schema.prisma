// Define models and client/db config

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// Tables for Users, Tasks, Tags, and TaskTags (many-to-many relationship)
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  status      String    @default("pending") // pending, in-progress, completed
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tags        TaskTag[]
}

model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  color     String?
  createdAt DateTime  @default(now())
  tasks     TaskTag[]
}

model TaskTag {
  taskId String
  tagId  String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([taskId, tagId])
}
